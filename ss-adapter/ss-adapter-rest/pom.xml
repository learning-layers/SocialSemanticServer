<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>sss.adapter</groupId>
    <artifactId>ss-adapter</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <groupId>sss.adapter</groupId>
  <artifactId>ss-adapter-rest</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>war</packaging>

  <name>ss-adapter-rest</name>

  <build>
    
    <plugins>
      
      <!-- MAVEN WAR start --> 
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.1.1</version>
        <configuration>
          <failOnMissingWebXml>false</failOnMissingWebXml>
          <packagingExcludes>WEB-INF/web.xml</packagingExcludes>
        </configuration>
      </plugin>
      
      <!-- MAVEN WAR end -->
      
       <!-- SWAGGER start -->
      
     <plugin>
        <groupId>com.github.kongchen</groupId>
        <artifactId>swagger-maven-plugin</artifactId>
        <version>2.3</version>
        <configuration>
          <apiSources>
            <apiSource>
              <locations>at.kc.tugraz.ss.adapter.rest</locations>
              <apiVersion>${ssVersion}</apiVersion>
              <basePath>http://localhost:8084/ss-adapter-rest/rest</basePath>
              <apiInfo>
                <title>Social Semantic Server REST API</title>
                <description>https://github.com/learning-layers/SocialSemanticServer/</description>
                <termsOfServiceUrl>https://github.com/learning-layers/</termsOfServiceUrl>
                <contact>${project.contact}</contact>
                <license>${project.license}</license>
                <licenseUrl>${project.licenseURI}</licenseUrl>
              </apiInfo>
<!--              <overridingModels>${basedir}/src/main/resources/swagger/swagger-overriding-models.json</overridingModels>-->
              <swaggerInternalFilter>com.wordnik.swagger.config.DefaultSpecFilter</swaggerInternalFilter>
              <mustacheFileRoot>${basedir}/src/main/resources/swagger/</mustacheFileRoot>
              <!--<outputTemplate>${basedir}/src/main/resources/swagger/html.mustache</outputTemplate>-->
              <outputTemplate>${basedir}/src/main/resources/swagger/strapdown.html.sss</outputTemplate>
              <outputPath>${basedir}/src/main/webapp/swagger/generated/document.html</outputPath>
              <swaggerDirectory>${basedir}/src/main/webapp/swagger/swagger-ui</swaggerDirectory>
              <swaggerUIDocBasePath>http://localhost:8084/ss-adapter-rest/rest/SSAdapterRest/doc</swaggerUIDocBasePath>
              <useOutputFlatStructure>false</useOutputFlatStructure>
            </apiSource>
          </apiSources>
        </configuration>
        <executions>
          <execution>
            <phase>compile</phase>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      
      <!-- SWAGGER end -->
        
    </plugins>
  </build>
  
  <dependencies>
   
    <dependency>
      <groupId>sss.serv</groupId>
      <artifactId>ss-dataimport-datatypes</artifactId>
      <version>${project.version}</version>
    </dependency>
  
    <dependency>
      <groupId>sss.conf</groupId>
      <artifactId>ss-conf-conf</artifactId>
      <version>${project.version}</version>
    </dependency>
    
    <dependency>
      <groupId>sss.serv</groupId>
      <artifactId>serv-errreg</artifactId>
      <version>${project.version}</version>
    </dependency>
    
    <dependency>
      <groupId>sss.serv</groupId>
      <artifactId>ss-jsonld-api</artifactId>
      <version>${project.version}</version>
    </dependency>
    
    <dependency>
      <groupId>sss.adapter</groupId>
      <artifactId>ss-adapter-socket-datatypes</artifactId>
      <version>${project.version}</version>
    </dependency>
    
    <dependency>
      <groupId>sss.serv</groupId>
      <artifactId>ss-jsonld-serv</artifactId>
      <version>${project.version}</version>
    </dependency>
    
    <dependency>
      <groupId>sss.adapter</groupId>
      <artifactId>ss-adapter-rest-conf</artifactId>
      <version>${project.version}</version>
    </dependency> 
    
    <dependency>
      <groupId>sss.serv</groupId>
      <artifactId>serv-caller</artifactId>
      <version>${project.version}</version>
    </dependency> 
    
    <dependency>
      <groupId>sss.util</groupId>
      <artifactId>ss-util</artifactId>
      <version>${project.version}</version>
    </dependency> 
    
    <!-- TOMCAT start --> 
    
    <dependency>
      <groupId>org.apache.tomcat</groupId>
      <artifactId>tomcat-catalina</artifactId>
      <version>7.0.41</version>
      <scope>provided</scope>
    </dependency>
            
    <dependency>
      <groupId>org.apache.tomcat</groupId>
      <artifactId>tomcat-coyote</artifactId>
      <version>7.0.41</version>
      <scope>provided</scope>
    </dependency>
    
    <!-- TOMCAT end --> 
     
     <!-- JERSEY start -->
     
    <dependency>
      <groupId>org.glassfish.jersey.containers</groupId>
      <artifactId>jersey-container-servlet-core</artifactId>
      <version>2.4.1</version>
    </dependency>
    
    <dependency>
      <groupId>org.glassfish.jersey.media</groupId>
      <artifactId>jersey-media-multipart</artifactId>
      <version>2.4.1</version>
    </dependency>
           
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <version>2.5</version>
      <scope>provided</scope>
    </dependency>
              
    <dependency>
      <groupId>com.fasterxml.jackson.jaxrs</groupId>
      <artifactId>jackson-jaxrs-json-provider</artifactId>
      <version>2.4.1</version>
    </dependency>
    
    <!-- JERSEY end -->           
    
   <!-- CORS start --> 
    <dependency>
      <groupId>com.thetransactioncompany</groupId>
      <artifactId>cors-filter</artifactId>
      <version>1.9.1</version>
    </dependency>
    
    <dependency>
      <groupId>com.thetransactioncompany</groupId>
      <artifactId>java-property-utils</artifactId>
      <version>1.9</version>
    </dependency>
    
    <!-- CORS end --> 

    <!-- SWAGGER start --> 
    <dependency>
      <groupId>com.wordnik</groupId>
      <artifactId>swagger-jersey2-jaxrs_2.10</artifactId>
      <scope>compile</scope>
      <version>1.3.7</version>
    </dependency>
    
    <!-- SWAGGER end --> 
    
  </dependencies>
</project>


