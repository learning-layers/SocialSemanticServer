<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>at.tugraz.kti.sss.adapter.rest</groupId>
    <artifactId>adapter.rest</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <groupId>at.tugraz.kti.sss.adapter.rest</groupId>
  <artifactId>adapter.rest.v3</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>war</packaging>

  <name>adapter.rest.v3</name>

  <build>
    
    <plugins>
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.1.1</version>
        <configuration>
          <failOnMissingWebXml>false</failOnMissingWebXml>
          <packagingExcludes>WEB-INF/web.xml</packagingExcludes>
        </configuration>
      </plugin>
      
      <!-- MAVEN WAR end -->
      
       <!-- SWAGGER start -->
      
      <plugin>
        <groupId>com.github.kongchen</groupId>
        <artifactId>swagger-maven-plugin</artifactId>
        <version>3.1.3</version>
        
        <configuration>
          <apiSources>
            <apiSource>
              
              <locations>at.tugraz.sss.adapter.rest.v3</locations>
              
              <host>localhost:8080</host>
              <basePath>/sss.adapter.rest.v3/rest</basePath>
              
              <info>
                <version>v3</version>
                <title>Social Semantic Server REST API</title>
                <description>https://github.com/learning-layers/SocialSemanticServer/</description>
                <termsOfService>https://github.com/learning-layers/</termsOfService>
                <contact>
                  <email>${sssContact}</email>
                </contact>
                <license>
                  <name>${sssLicense}</name>
                  <url>${sssLicenseURI}</url>
                </license>
              </info>
                
              <outputPath>${basedir}/src/main/webapp/api-docs</outputPath>
              <swaggerDirectory>${basedir}/src/main/webapp/api-docs</swaggerDirectory>
            </apiSource>
          </apiSources>
        </configuration>
        
        <executions>
          <execution>
            <phase>compile</phase>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      
      <!-- SWAGGER end -->
      </plugins>
  </build>
  
  <dependencies>

    <dependency>
      <groupId>at.tugraz.kti.sss.adapter.rest</groupId>
      <artifactId>adapter.rest.v3.common</artifactId>
      <version>${project.version}</version>
    </dependency>
    
    <!-- tocmat start -->
    
    <dependency>
      <groupId>org.apache.tomcat</groupId>
      <artifactId>tomcat-catalina</artifactId>
      <version>7.0.52</version>
      <scope>provided</scope>
    </dependency>
            
    <dependency>
      <groupId>org.apache.tomcat</groupId>
      <artifactId>tomcat-coyote</artifactId>
      <version>7.0.52</version>
      <scope>provided</scope>
    </dependency>
    
    <!-- servlet 3.0 start -->
    
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>javax.servlet-api</artifactId>
      <version>3.0.1</version>
      <scope>provided</scope>
    </dependency>
    
    <!-- servlet 3.0 end -->
    
    <!-- jackson start -->
    
    <dependency>
      <groupId>org.glassfish.jersey.media</groupId>
      <artifactId>jersey-media-json-jackson</artifactId>
      <version>2.21</version>
    </dependency>
    
    <!-- jackson end -->
    
    <!-- cors start -->
   
    <dependency>
      <groupId>com.thetransactioncompany</groupId>
      <artifactId>cors-filter</artifactId>
      <version>1.9.1</version>
    </dependency>
    
    <dependency>
      <groupId>com.thetransactioncompany</groupId>
      <artifactId>java-property-utils</artifactId>
      <version>1.9</version>
    </dependency>
    
    <!-- cors end --> 

  </dependencies>
</project>